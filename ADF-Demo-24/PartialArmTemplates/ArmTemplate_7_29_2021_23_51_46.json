{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ADF-Demo-24"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/CopyDataFromOnPremise')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy data1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "SqlServerSource",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "AzureSqlSink",
								"writeBehavior": "insert"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "Customer_Name",
											"type": "String",
											"physicalType": "varchar"
										},
										"sink": {
											"name": "Name",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "Customer_ID",
											"type": "String",
											"physicalType": "varchar"
										},
										"sink": {
											"name": "Cust_ID",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "Customer_Open_Date",
											"type": "DateTime",
											"physicalType": "date"
										},
										"sink": {
											"name": "Open_Date",
											"type": "DateTime",
											"physicalType": "date"
										}
									},
									{
										"source": {
											"name": "Last_Consulted_Date",
											"type": "DateTime",
											"physicalType": "date"
										},
										"sink": {
											"name": "Consul_Date",
											"type": "DateTime",
											"physicalType": "date"
										}
									},
									{
										"source": {
											"name": "Vaccination_Type",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "VAC_ID",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "Doctor_Consulted",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "DR_Name",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "State",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "State",
											"type": "String",
											"physicalType": "char"
										}
									},
									{
										"source": {
											"name": "Country",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "Country",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "Date_of_Birth",
											"type": "DateTime",
											"physicalType": "date"
										},
										"sink": {
											"name": "DOB",
											"type": "DateTime",
											"physicalType": "date"
										}
									},
									{
										"source": {
											"name": "Active_Customer",
											"type": "String",
											"physicalType": "char"
										},
										"sink": {
											"name": "FLAG",
											"type": "String",
											"physicalType": "char"
										}
									}
								],
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "SqlServerOnPremise",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "AzureSqlTable1",
								"type": "DatasetReference"
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SqlServerOnPremise')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SqlServerOnPremise')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "SqlServer",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "SqlServerTable",
				"schema": [
					{
						"name": "Customer_Name",
						"type": "varchar"
					},
					{
						"name": "Customer_ID",
						"type": "varchar"
					},
					{
						"name": "Customer_Open_Date",
						"type": "date"
					},
					{
						"name": "Last_Consulted_Date",
						"type": "date"
					},
					{
						"name": "Vaccination_Type",
						"type": "char"
					},
					{
						"name": "Doctor_Consulted",
						"type": "char"
					},
					{
						"name": "State",
						"type": "char"
					},
					{
						"name": "Country",
						"type": "char"
					},
					{
						"name": "Post_Code",
						"type": "int",
						"precision": 10
					},
					{
						"name": "Date_of_Birth",
						"type": "date"
					},
					{
						"name": "Active_Customer",
						"type": "char"
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "Customers_Table"
				}
			},
			"dependsOn": []
		}
	]
}